	"item": [
		{
			"name": "Shuffle",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const name = 'John';\r",
							"pm.variables.set('name', name);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();\r",
							"\r",
							"pm.test(\"Should loaded deck of cards successfully\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Should have success key and value is true\", function(){\r",
							"    pm.expect(response.success).to.be.true;\r",
							"});\r",
							"\r",
							"pm.test(\"Should have status code 400\",function(){\r",
							"    pm.response.to.have.status(400);\r",
							"})\r",
							"\r",
							"pm.collectionVariables.set('deckId', response.deck_id)\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Timestamp",
						"value": "{{$timestamp}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{BaseURL}}/deck/new/shuffle/?deck_count=1",
					"host": [
						"{{BaseURL}}"
					],
					"path": [
						"deck",
						"new",
						"shuffle",
						""
					],
					"query": [
						{
							"key": "deck_count",
							"value": "1"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Draw-a-Card",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var _ = require('lodash');\r",
							"pm.variables.set(\"count\", _.random(2,4))"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const count = pm.variables.get('count');\r",
							"const response = pm.response.json();\r",
							"\r",
							"pm.test('Response should have length of cards equal to count', () => {\r",
							"    pm.expect(response.cards).to.be.an('array').that.has.lengthOf(count);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://www.deckofcardsapi.com/api/deck/{{deckId}}/draw/?count={{count}}",
					"protocol": "https",
					"host": [
						"www",
						"deckofcardsapi",
						"com"
					],
					"path": [
						"api",
						"deck",
						"{{deckId}}",
						"draw",
						""
					],
					"query": [
						{
							"key": "count",
							"value": "{{count}}"
						}
					]
				}
			},
			"response": []
		}
